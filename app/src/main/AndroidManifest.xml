        </activity>
        <activity android:name=".activity.AlteraTimeBancoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.controledecampeonato.activity.AlteraCampeonato" />
        </activity>
        <activity android:name=".activity.AlteraCampeonato">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.controledecampeonato.activity.MainActivity" />
        </activity>
    </application>

</manifest>